@using PavlicWebShop.Models.ViewModel
@model List<ProductViewModel>
@{
    int counter = 1;
    var r = new Random();
    var tenRandomProduct = Model.OrderBy(u => r.Next()).Take(10);

}
<div class="row g-3">

    @foreach (var product in tenRandomProduct)
    {

        if (@product.ProductImgUrl != null)
        {
            string path = @product.ProductImgUrl;
            <div class="col-md-4 card">

                <div class="card-header">
                    <img class="card-img" src=@Url.Content(product.ProductImgUrl) alt="Card image cap">
                </div>
                <div class="card-body">
                    <div class="card-title"><h5>@product.Title</h5></div>
                    <div class="card-text"><h5>@product.Description</h5></div>
                    <div class="card-text"><h5>@product.Price</h5></div>
                </div>
                <div class="card-footer">
                    <a asp-action="DetailsProduct" asp-route-id="@product.Id" class="btn btn-primary">View</a>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-4 card">
                <div class="card-header">
                    <img class="card-img" src="" alt="Card image cap">
                </div>
                <div class="card-body">
                    <div class="card-title"><h5>@product.Title</h5></div>
                    <div class="card-text"><h5>@product.Description</h5></div>
                    <div class="card-text"><h5>@product.Price</h5></div>
                </div>
                <div class="card-footer">
                    <a asp-action="DetailsProduct" asp-route-id="@product.Id" class="btn btn-primary">View</a>
                </div>
            </div>
        }
    }
</div>