@using PavlicWebShop.Models.Binding
@using PavlicWebShop.Services.Interface;
@model ProductBinding
@inject IProductService productService

@{
    var productCategory = await productService.GetProductCategorys();
}

@{
    ViewData["Title"] = "AddProduct";
}

<h1>AddProduct</h1>

<h4>ProductViewModel</h4>
<hr />
<form action="/Product/AddProduct" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type='number' step='0.01'/>
                <span asp-validation-for="Quantity" type='number' step='0.01' class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type='number' step='0.01' />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


        </div>
        <div class="col-md-4">
            <label asp-for="ProductCategoryId" class="control-label">Odabei kategoriju</label>
            <select name="ProductCategoryId" class="form-select" aria-label="Default select example">
                @foreach (var item in productCategory)
                {
                    <option value="@item.Id">@item.Title</option>
                }
            </select>
        </div>
          <div class="container col-md-6">
            <div class="mb-5">
                <label for="ProductImg" class="form-label">Bootstrap 5 image Upload with Preview</label>
                <input class="form-control" type="file" id="formFile" name="ProductImg" onchange="preview()">
                <button onclick="clearImage()" class="btn btn-primary mt-3">Click me</button>
            </div>
            <img id="frame" src="~/user.png" class="img-fluid" />
        </div>

        <script>
            function preview() {
                frame.src = URL.createObjectURL(event.target.files[0]);
            }
            function clearImage() {
                document.getElementById('formFile').value = null;
                frame.src ="~/user.png";
            }
        </script>
        <input type="submit" class="btn btn-primary mt-5" value="Create">
    </div>


    <div>
        <a asp-action="ProductsList">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
